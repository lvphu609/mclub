<div class="container form-signup">
    <div class="col-md-8">
        <div class="container row">
          <div class="col-md-4">
            <div class="login-panel panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Sign up</h3>
              </div>
              <div class="panel-body">
                <form action="#" accept-charset="utf-8" method="post" id="frm_login" novalidate="novalidate">
                  <div class="form-group">
                    <label class="checkbox" for="first_name">First name</label>
                    <input class="form-control " placeholder="First name" id="username" name="username" type="text" value="" autocomplete="off">
                  </div>
                  <div class="form-group ">
                    <label class="checkbox" for="last_name">Last name</label>
                    <input class="form-control " placeholder="Last name" id="last_name" name="last_name" type="text" value="" autocomplete="off">
                  </div>
                  <div class="form-group ">
                    <label class="checkbox" for="password_input">Email</label>
                    <input class="form-control " placeholder="Email" id="username" name="username" type="text" value="" autocomplete="off">
                  </div>
                  <div class="form-group ">
                    <label class="checkbox" for="password_input">Password</label>
                    <input class="form-control " placeholder="Password" id="password_input" name="password_input" type="password" value="">
                  </div>
                  <div class="form-group ">
                    <label class="checkbox" for="password_confirm">Password confirmation</label>
                    <input class="form-control " placeholder="Password confirmation" id="password_confirm" name="password_confirm" type="password" value="">
                  </div>
                  <div class="form-group ">
                    <label class="checkbox" for="your_role">Your Role</label>
                    <select class="form-control" id="your_role" name="your_role">
                      <option>Loan's owner</option>
                    </select>
                  </div>
                  <button type="submit" class="btn btn-lg btn-primary btn-block btn-login">Sign up</button>
                </form>
                <div class="text-center"><a href="login">Login</a></div>
              </div>
            </div>
          </div>
        </div>
    </div>
    <div class="col-md-4 hidden-xs hidden-sm hidden-md">
      <div class="box-account-left">
        <span class="text-left">Already have an account?</span> <span class="text-right"><a href="login">Log In</a></span>
      </div>
    </div>
</div>