<div class="container form-login">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Log in</h3>
          </div>
          <div class="panel-body">
            <form action="#" accept-charset="utf-8" method="post" id="frm_login" novalidate="novalidate">
              <div class="form-group ">
                <label class="checkbox" for="password_input">Email</label>
                <input class="form-control " placeholder="Email" id="username" name="username" type="text" value="" autocomplete="off">
              </div>
              <div class="form-group ">
                <label class="checkbox" for="password_input">Password</label>
                <input class="form-control " placeholder="Password" id="password_input" name="password_input" type="password" value="">
              </div>
              <div class="checkbox">
                  <label>
                    <input name="remember" type="checkbox" value="Remember Me">
                    Remember me
                  </label>
              </div>
              <button type="submit" class="btn btn-lg btn-primary btn-block btn-login">Log in</button>
            </form>
            <div class="text-center"><a href="signup">Sign up</a></div>
            <div class="text-center"><a href="forgot">Forgot your password?</a></div>
          </div>
        </div>
      </div>
</div>
